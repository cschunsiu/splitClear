<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.splitclear.cschunsiu.splitclear">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_sc_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_sc_launcher_round"
        android:supportsRtl="true"
        android:windowSoftInputMode="stateHidden"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:windowSoftInputMode="adjustNothing"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.AddGroupActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".activity.GroupViewActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".activity.AddBillActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".activity.ShowBalanceActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>
    </application>

</manifest>